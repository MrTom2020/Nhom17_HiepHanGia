<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".tintuc"
    android:background="@drawable/tuybiennut3">

    <RelativeLayout
        android:id="@+id/rs"
        android:layout_width="339dp"
        android:layout_height="529dp"
        android:background="@drawable/tuybn4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.602"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.807">

        <ImageView
            android:id="@+id/imgtt"
            android:layout_width="98dp"
            android:layout_height="104dp"
            android:layout_below="@+id/imgttt"
            android:layout_alignParentStart="true"
            android:layout_marginStart="15dp"
            android:layout_marginTop="24dp"
            android:scaleType="fitXY"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/txtaqi"
            android:layout_width="89dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="19dp"
            android:layout_marginTop="29dp"
            android:layout_toEndOf="@+id/imgttt" />

        <TextView
            android:id="@+id/txtvt"
            android:layout_width="117dp"
            android:layout_height="125dp"
            android:layout_alignParentTop="true"
            android:layout_marginStart="5dp"
            android:layout_marginTop="24dp"
            android:layout_toEndOf="@+id/txtaqi" />

        <TextView
            android:id="@+id/txtpmtt"
            android:layout_width="91dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtaqi"
            android:layout_marginStart="19dp"
            android:layout_marginTop="13dp"
            android:layout_toEndOf="@+id/imgttt" />

        <TextView
            android:id="@+id/txtndtt"
            android:layout_width="212dp"
            android:layout_height="52dp"
            android:layout_below="@+id/imgtt"
            android:layout_marginStart="11dp"
            android:layout_marginTop="-54dp"
            android:layout_toEndOf="@+id/imgtt" />

        <TextView
            android:id="@+id/txtdamtt"
            android:layout_width="113dp"
            android:layout_height="35dp"
            android:layout_below="@+id/txtpmtt"
            android:layout_marginStart="7dp"
            android:layout_marginTop="71dp"
            android:layout_toEndOf="@+id/imgtt"/>

        <TextView
            android:id="@+id/txtgio"
            android:layout_width="90dp"
            android:layout_height="35dp"
            android:layout_below="@+id/txtpmtt"
            android:layout_marginStart="15dp"
            android:layout_marginTop="70dp"
            android:layout_toEndOf="@+id/txtdamtt"/>

        <TextView
            android:id="@+id/txtthongtin"
            android:layout_width="323dp"
            android:layout_height="147dp"
            android:layout_below="@+id/txtndtt"
            android:layout_alignParentStart="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="44dp"
            android:textColor="#fff000"
            android:background="#333333"/>

        <ImageView
            android:id="@+id/imgttt"
            android:layout_width="98dp"
            android:layout_height="104dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="11dp"
            android:layout_marginTop="26dp"
            tools:srcCompat="@tools:sample/avatars"
            android:background="@color/black"/>

        <Button
            android:id="@+id/btnl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtthongtin"
            android:layout_alignParentStart="true"
            android:layout_marginStart="121dp"
            android:layout_marginTop="13dp"
            android:text="Load"
            android:background="@drawable/tuybn4"/>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>